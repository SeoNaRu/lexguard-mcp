{
  "api_name": "국가인권위원회 결정문 목록 조회",
  "request_url": "https://www.law.go.kr/DRF/lawSearch.do?target=nhrck",
  "request_parameters": [
    {
      "name": "OC",
      "type": "string",
      "required": true,
      "description": "사용자 이메일의 ID(g4c@korea.kr일경우 OC값=g4c)"
    },
    {
      "name": "target",
      "type": "string",
      "required": true,
      "description": "서비스 대상 (국가인권위원회 : nhrck)"
    },
    {
      "name": "type",
      "type": "char",
      "required": true,
      "description": "출력 형태 : HTML/XML/JSON"
    },
    {
      "name": "search",
      "type": "int",
      "required": false,
      "description": "검색범위 (1 : 사건명 (default), 2 : 본문검색)"
    },
    {
      "name": "query",
      "type": "string",
      "required": false,
      "description": "검색범위에서 검색을 원하는 질의 (IE 조회시 UTF-8 인코딩 필수)"
    },
    {
      "name": "display",
      "type": "int",
      "required": false,
      "description": "검색된 결과 개수 (default=20 max=100)"
    },
    {
      "name": "page",
      "type": "int",
      "required": false,
      "description": "검색 결과 페이지 (default=1)"
    },
    {
      "name": "gana",
      "type": "string",
      "required": false,
      "description": "사전식 검색 (ga,na,da…,etc)"
    },
    {
      "name": "sort",
      "type": "string",
      "required": false,
      "description": "정렬옵션 (lasc : 사건명 오름차순 (default) / ldes : 사건명 내림차순 / nasc : 의결번호 오름차순 / ndes : 의결번호 내림차순)"
    },
    {
      "name": "popYn",
      "type": "string",
      "required": false,
      "description": "상세화면 팝업창 여부(팝업창으로 띄우고 싶을 때만 'popYn=Y')"
    },
    {
      "name": "fields",
      "type": "string",
      "required": false,
      "description": "응답항목 옵션(사건명, 사건번호, ...) * 빈 값일 경우 전체 항목 표출 * 출력 형태 HTML일 경우 적용 불가능"
    }
  ],
  "response_fields": [
    {
      "name": "target",
      "type": "string",
      "description": "검색서비스 대상"
    },
    {
      "name": "키워드",
      "type": "string",
      "description": "검색 단어"
    },
    {
      "name": "section",
      "type": "string",
      "description": "검색범위"
    },
    {
      "name": "totalCnt",
      "type": "int",
      "description": "검색결과갯수"
    },
    {
      "name": "page",
      "type": "int",
      "description": "현재 페이지번호"
    },
    {
      "name": "기관명",
      "type": "string",
      "description": "위원회명"
    },
    {
      "name": "nhrck id",
      "type": "int",
      "description": "검색 결과 순번"
    },
    {
      "name": "결정문일련번호",
      "type": "int",
      "description": "결정문일련번호"
    },
    {
      "name": "사건명",
      "type": "string",
      "description": "사건명"
    },
    {
      "name": "사건번호",
      "type": "string",
      "description": "사건번호"
    },
    {
      "name": "의결일자",
      "type": "string",
      "description": "의결일자"
    },
    {
      "name": "데이터기준일시",
      "type": "string",
      "description": "데이터기준일시"
    },
    {
      "name": "결정문상세링크",
      "type": "string",
      "description": "결정문 상세링크"
    }
  ],
  "sample_urls": [
    "https://www.law.go.kr/DRF/lawSearch.do?OC=test&target=nhrck&type=HTML",
    "https://www.law.go.kr/DRF/lawSearch.do?OC=test&target=nhrck&type=XML",
    "https://www.law.go.kr/DRF/lawSearch.do?OC=test&target=nhrck&type=JSON"
  ]
}

