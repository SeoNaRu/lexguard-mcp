{
  "api_name": "법령 자치법규 연계 목록 조회",
  "request_url": "http://www.law.go.kr/DRF/lawSearch.do?target=lnkLs",
  "request_parameters": [
    {
      "name": "OC",
      "type": "string",
      "required": true,
      "description": "사용자 이메일의 ID(g4c@korea.kr일경우 OC값=g4c)"
    },
    {
      "name": "target",
      "type": "string : lnkLs",
      "required": true,
      "description": "서비스 대상"
    },
    {
      "name": "type",
      "type": "char",
      "required": true,
      "description": "출력 형태 : HTML/XML/JSON"
    },
    {
      "name": "query",
      "type": "string",
      "required": false,
      "description": "법령명에서 검색을 원하는 질의"
    },
    {
      "name": "display",
      "type": "int",
      "required": false,
      "description": "검색된 결과 개수 (default=20 max=100)"
    },
    {
      "name": "page",
      "type": "int",
      "required": false,
      "description": "검색 결과 페이지 (default=1)"
    },
    {
      "name": "sort",
      "type": "string",
      "required": false,
      "description": "정렬옵션(기본 : lasc 법령오름차순) / ldes : 법령내림차순 / dasc : 공포일자 오름차순 / ddes : 공포일자 내림차순 / nasc : 공포번호 오름차순 / ndes : 공포번호 내림차순"
    },
    {
      "name": "popYn",
      "type": "string",
      "required": false,
      "description": "상세화면 팝업창 여부(팝업창으로 띄우고 싶을 때만 'popYn=Y')"
    }
  ],
  "response_fields": [
    {
      "name": "target",
      "type": "string",
      "description": "검색서비스 대상"
    },
    {
      "name": "키워드",
      "type": "string",
      "description": "검색어"
    },
    {
      "name": "section",
      "type": "string",
      "description": "검색범위"
    },
    {
      "name": "totalCnt",
      "type": "int",
      "description": "검색건수"
    },
    {
      "name": "page",
      "type": "int",
      "description": "결과페이지번호"
    },
    {
      "name": "law id",
      "type": "int",
      "description": "결과 번호"
    },
    {
      "name": "법령일련번호",
      "type": "int",
      "description": "법령일련번호"
    },
    {
      "name": "법령명한글",
      "type": "string",
      "description": "법령명한글"
    },
    {
      "name": "법령ID",
      "type": "int",
      "description": "법령ID"
    },
    {
      "name": "공포일자",
      "type": "int",
      "description": "공포일자"
    },
    {
      "name": "공포번호",
      "type": "int",
      "description": "공포번호"
    },
    {
      "name": "제개정구분명",
      "type": "string",
      "description": "제개정구분명"
    },
    {
      "name": "법령구분명",
      "type": "string",
      "description": "법령구분명"
    },
    {
      "name": "시행일자",
      "type": "int",
      "description": "시행일자"
    }
  ],
  "sample_urls": [
