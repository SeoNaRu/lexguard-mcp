{
  "api_name": "연계 조례 목록 조회",
  "request_url": "http://www.law.go.kr/DRF/lawSearch.do?target=lnkOrd",
  "request_parameters": [
    {
      "name": "OC",
      "type": "string",
      "required": true,
      "description": "사용자 이메일의 ID(g4c@korea.kr일경우 OC값=g4c)"
    },
    {
      "name": "target",
      "type": "string : lnkOrd",
      "required": true,
      "description": "서비스 대상"
    },
    {
      "name": "type",
      "type": "char",
      "required": true,
      "description": "출력 형태 : HTML/XML/JSON"
    },
    {
      "name": "query",
      "type": "string",
      "required": false,
      "description": "법규명에서 검색을 원하는 질의"
    },
    {
      "name": "display",
      "type": "int",
      "required": false,
      "description": "검색된 결과 개수 (default=20 max=100)"
    },
    {
      "name": "page",
      "type": "int",
      "required": false,
      "description": "검색 결과 페이지 (default=1)"
    },
    {
      "name": "sort",
      "type": "string",
      "required": false,
      "description": "정렬옵션 (기본 : lasc 자치법규오름차순) ldes 자치법규 내림차순 / dasc : 공포일자 오름차순 / ddes : 공포일자 내림차순 / nasc : 공포번호 오름차순 / ndes : 공포번호 내림차순 / efasc : 시행일자 오름차순 / efdes : 시행일자 내림차순"
    },
    {
      "name": "popYn",
      "type": "string",
      "required": false,
      "description": "상세화면 팝업창 여부(팝업창으로 띄우고 싶을 때만 'popYn=Y')"
    }
  ],
  "response_fields": [
    {
      "name": "target",
      "type": "string",
      "description": "검색서비스 대상"
    },
    {
      "name": "키워드",
      "type": "string",
      "description": "검색 단어"
    },
    {
      "name": "section",
      "type": "string",
      "description": "검색범위"
    },
    {
      "name": "totalCnt",
      "type": "int",
      "description": "검색건수"
    },
    {
      "name": "page",
      "type": "int",
      "description": "결과페이지번호"
    },
    {
      "name": "law id",
      "type": "int",
      "description": "결과 번호"
    },
    {
      "name": "자치법규일련번호",
      "type": "int",
      "description": "자치법규 일련번호"
    },
    {
      "name": "자치법규명",
      "type": "string",
      "description": "자치법규명"
    },
    {
      "name": "자치법규ID",
      "type": "int",
      "description": "자치법규ID"
    },
    {
      "name": "공포일자",
      "type": "int",
      "description": "공포일자"
    },
    {
      "name": "공포번호",
      "type": "int",
      "description": "공포번호"
    },
    {
      "name": "제개정구분명",
      "type": "string",
      "description": "제개정구분명"
    },
    {
      "name": "자치법규종류",
      "type": "string",
      "description": "자치법규종류"
    },
    {
      "name": "시행일자",
      "type": "int",
      "description": "시행일자"
    }
  ],
  "sample_urls": [
    "http://www.law.go.kr/DRF/lawSearch.do?OC=test&target=lnkOrd&type=XML",
    "http://www.law.go.kr/DRF/lawSearch.do?OC=test&target=lnkOrd&type=HTML",
    "http://www.law.go.kr/DRF/lawSearch.do?OC=test&target=lnkOrd&type=JSON&query=청소년"
  ]
}

