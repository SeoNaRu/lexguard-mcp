{
  "api_name": "방송미디어통신위원회 결정문 목록 조회",
  "request_url": "https://www.law.go.kr/DRF/lawSearch.do?target=kcc",
  "request_parameters": [
    {
      "name": "OC",
      "type": "string",
      "required": true,
      "description": "사용자 이메일의 ID(g4c@korea.kr일경우 OC값=g4c)"
    },
    {
      "name": "target",
      "type": "string",
      "required": true,
      "description": "서비스 대상 (방송미디어통신위원회 : kcc)"
    },
    {
      "name": "type",
      "type": "char",
      "required": true,
      "description": "출력 형태 : HTML/XML/JSON"
    },
    {
      "name": "search",
      "type": "int",
      "required": false,
      "description": "검색범위 (1 : 안건명 (default), 2 : 본문검색)"
    },
    {
      "name": "query",
      "type": "string",
      "required": false,
      "description": "검색범위에서 검색을 원하는 질의 (IE 조회시 UTF-8 인코딩 필수)"
    },
    {
      "name": "display",
      "type": "int",
      "required": false,
      "description": "검색된 결과 개수 (default=20 max=100)"
    },
    {
      "name": "page",
      "type": "int",
      "required": false,
      "description": "검색 결과 페이지 (default=1)"
    },
    {
      "name": "gana",
      "type": "string",
      "required": false,
      "description": "사전식 검색 (ga,na,da…,etc)"
    },
    {
      "name": "sort",
      "type": "string",
      "required": false,
      "description": "정렬옵션 (lasc : 안건명 오름차순 (default) / ldes : 안건명 내림차순 / dasc : 의결연월일 오름차순 / ddes : 의결연월일 내림차순 / nasc : 안건번호 오름차순 / ndes : 안건번호 내림차순)"
    },
    {
      "name": "popYn",
      "type": "string",
      "required": false,
      "description": "상세화면 팝업창 여부(팝업창으로 띄우고 싶을 때만 'popYn=Y')"
    }
  ],
  "response_fields": [
    {
      "name": "target",
      "type": "string",
      "description": "검색서비스 대상"
    },
    {
      "name": "키워드",
      "type": "string",
      "description": "검색 단어"
    },
    {
      "name": "section",
      "type": "string",
      "description": "검색범위"
    },
    {
      "name": "totalCnt",
      "type": "int",
      "description": "검색 건수"
    },
    {
      "name": "page",
      "type": "int",
      "description": "현재 페이지번호"
    },
    {
      "name": "기관명",
      "type": "string",
      "description": "위원회명"
    },
    {
      "name": "kcc id",
      "type": "int",
      "description": "검색 결과 순번"
    },
    {
      "name": "결정문일련번호",
      "type": "int",
      "description": "결정문 일련번호"
    },
    {
      "name": "안건명",
      "type": "string",
      "description": "안건명"
    },
    {
      "name": "안건번호",
      "type": "string",
      "description": "안건번호"
    },
    {
      "name": "의결일자",
      "type": "string",
      "description": "의결일자"
    },
    {
      "name": "결정문상세링크",
      "type": "string",
      "description": "결정문 상세링크"
    }
  ],
  "sample_urls": [
    "https://www.law.go.kr/DRF/lawSearch.do?OC=test&target=kcc&type=HTML",
    "https://www.law.go.kr/DRF/lawSearch.do?OC=test&target=kcc&type=XML",
    "https://www.law.go.kr/DRF/lawSearch.do?OC=test&target=kcc&type=JSON"
  ]
}

